{
	"extends": "@tsconfig/node20/tsconfig.json",
	"include": ["./src/", "./lib.d.ts"],
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"declaration": true,
		"sourceMap": true,
		"declarationMap": true,

		"module": "node16",
		"moduleResolution": "node16",
		"allowImportingTsExtensions": true,
		"rewriteRelativeImportExtensions": true,

		"strict": true,
		"noUncheckedIndexedAccess": true,

		"allowJs": true,
		"checkJs": true
	}
}
