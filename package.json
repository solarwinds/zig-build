{
	"name": "zig-build",
	"version": "0.3.0",
	"description": "Node.js native addon build and cross-compile library using Zig",
	"license": "MIT",
	"contributors": ["Raphaël Thériault <raphael.theriault@solarwinds.com>"],
	"repository": "https://github.com/solarwindscloud/zig-build.git",
	"homepage": "https://github.com/solarwindscloud/zig-build#readme",
	"bugs": "https://github.com/solarwindscloud/zig-build/issues",
	"keywords": [
		"native",
		"addon",
		"bindings",
		"napi",
		"node-api",
		"c",
		"c++",
		"zig",
		"build",
		"cross"
	],
	"type": "module",
	"main": "./dist/index.cjs",
	"exports": {
		"import": "./dist/index.js",
		"require": "./dist/index.cjs"
	},
	"files": ["./src/", "./dist/"],
	"engines": {
		"node": ">= 20.9.0"
	},
	"packageManager": "pnpm@10.20.0",
	"scripts": {
		"build": "tsc",
		"check": "biome check",
		"fix": "biome check --write",
		"test": "node --test"
	},
	"publishConfig": {
		"access": "public",
		"provenance": true
	},
	"dependencies": {
		"chalk": "5.6.2",
		"node-api-headers": "^1.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.3",
		"@types/node": "^20.9.0",
		"@tsconfig/node20": "*",
		"node-addon-api": "^8.5.0",
		"typescript": "~5.9.3"
	},
	"peerDependencies": {
		"node-addon-api": ">= 4.0.0"
	},
	"peerDependenciesMeta": {
		"node-addon-api": {
			"optional": true
		}
	}
}
